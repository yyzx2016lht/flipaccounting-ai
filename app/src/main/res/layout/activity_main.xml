<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">
            <TextView
                android:id="@+id/tv_home_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textSize="12sp"
                android:textColor="#5C6BC0"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_ai_config"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">
            <TextView
                android:id="@+id/tv_ai_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🤖"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_ai_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI 配置"
                android:textSize="12sp"
                android:textColor="#666666"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/page_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="翻转记账"
                        android:textColor="#333333"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="v1.0"
                        android:textColor="#999999"
                        android:textSize="13sp"
                        android:background="#E0E0E0"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="核心权限"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRequestOverlay"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="1. 请求悬浮窗权限"
                    android:textSize="16sp"
                    android:textColor="#5C6BC0"
                    app:strokeColor="#5C6BC0"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnShowOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="2. 开启记账悬浮窗"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#5C6BC0"
                    app:cornerRadius="12dp"
                    app:elevation="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="30dp"
                    android:text="提示：请先授予在其他应用上层显示权限，然后点击开启按钮。"
                    android:textSize="13sp"
                    android:textColor="#999999"
                    android:lineSpacingExtra="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="智能感应"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_flip_trigger"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="翻转手机自动记账"
                            android:textSize="16sp"
                            android:textColor="#333333"
                            app:useMaterialThemeColors="true" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="扣在桌上再翻转至正面即可触发。"
                            android:textColor="#999999"
                            android:textSize="12sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginVertical="16dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统与隐私"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switch_hide_recent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="在最近任务中隐藏应用"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="开启后，App 将不会出现在多任务列表中，保护隐私。"
                            android:textColor="#999999"
                            android:textSize="12sp"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置与数据"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/btn_manage_assets"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:text="💳   资产管理"
                            android:textColor="#333333"
                            android:textSize="16sp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginHorizontal="20dp"/>

                        <TextView
                            android:id="@+id/btn_manage_categories"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:text="🏷️   分类管理"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginHorizontal="20dp"/>

                        <TextView
                            android:id="@+id/btn_manage_currencies"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:text="💱   货币管理"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginHorizontal="20dp"/>

                        <TextView
                            android:id="@+id/btn_backup_restore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:text="💾   数据备份与恢复"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginHorizontal="20dp"/>

                        <TextView
                            android:id="@+id/btn_manage_whitelist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center_vertical"
                            android:padding="20dp"
                            android:text="📱   触发应用白名单"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flip Accounting"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:textColor="#DDDDDD"
                    android:textSize="13sp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <ScrollView
            android:id="@+id/page_ai_config"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- 标题栏 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="24dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI 智能配置"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <!-- 1. AI 提供商选择 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI 提供商"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinner_providers"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_search_box"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="16dp"/>

                <!-- 2. API 接口地址 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API 接口地址"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/et_api_url"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="https://api.example.com"
                    android:background="@drawable/bg_search_box"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:singleLine="true"
                    android:layout_marginBottom="16dp"/>

                <!-- 3. API 令牌 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="API 令牌 (API Key)"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/et_api_key"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:hint="输入您的 sk-..."
                    android:inputType="textPassword"
                    android:background="@drawable/bg_search_box"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <!-- 4. 模型选择 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择 AI 模型"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <Spinner
                    android:id="@+id/spinner_models"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:background="@drawable/bg_search_box"
                    android:spinnerMode="dropdown"
                    android:layout_marginBottom="24dp"/>

                <!-- 5. 提示词定制 (Prompt) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="系统提示词 (System Prompt)"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:id="@+id/et_custom_prompt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="6"
                    android:gravity="top"
                    android:hint="留空将使用系统默认提示词"
                    android:background="@drawable/bg_search_box"
                    android:padding="12dp"
                    android:textSize="13sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="30dp"/>

                <!-- 按钮组 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_test_conn"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="测试连接并获取模型"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="#5C6BC0"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save_config"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="保存配置"
                    app:cornerRadius="12dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:backgroundTint="#4CAF50"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="注：部分提供商可能需要科学上网或特定的 API 地址。"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:textColor="#999999"
                    android:textSize="11sp"/>

                <View android:layout_width="match_parent" android:layout_height="40dp"/>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>
